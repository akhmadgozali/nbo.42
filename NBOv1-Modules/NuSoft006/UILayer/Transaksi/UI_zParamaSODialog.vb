      Dim Id As Persistent.zParamaOrderPenjualanDetail = CType(xGridView.GetRow(xGridView.FocusedRowHandle), Persistent.zParamaOrderPenjualanDetail)
      xGridView.DeleteRow(xGridView.FocusedRowHandle)
      detailToDelete.Add(Id)
    End If
